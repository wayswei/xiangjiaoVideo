<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_corner"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/update_top_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/update_version_text"
                android:textSize="14sp"
                android:textColor="#272727"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/update_top_back"
            android:layout_above="@+id/update_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/update_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="@color/black_color"
                />
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE">
            </View>
        </RelativeLayout>



        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/update_control"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/update_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跳过"
                    android:textColor="#ABABAB"
                    android:textSize="18sp" />
                <View
                    android:layout_alignParentRight="true"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#EEEEEE">

                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/update_commit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新"
                    android:textColor="@color/main_theme_color"
                    android:textSize="18sp" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
