<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:background="@drawable/card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <RelativeLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1">
           <TextView
               android:id="@+id/p_video_num_view"
               android:layout_marginTop="22dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:textSize="@dimen/txt_25"
               android:textColor="@color/main_dark_theme_color"
               android:text="10"/>
           <TextView
               android:textColor="@color/gray_color"
               android:text="今日可观影次数"
               android:textSize="@dimen/txt_16"
               android:layout_marginBottom="14dp"
               android:layout_marginTop="10dp"
               android:layout_below="@+id/p_video_num_view"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"/>
            <View
                android:background="@color/line_gray"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="1dp"
                android:layout_height="42dp">

            </View>
       </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/p_video_s_num_view"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/txt_25"
                android:textColor="#f65758"
                android:text="10"/>
            <TextView
                android:textColor="@color/gray_color"
                android:text="剩余观影次数"
                android:textSize="@dimen/txt_16"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/p_video_s_num_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>