<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="104dp">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/check_button"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/check_img_view"
            android:layout_margin="5dp"
            android:layout_centerInParent="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_uncheck"/>

    </RelativeLayout>

    <ImageView
        android:layout_toRightOf="@+id/check_button"
        android:id="@+id/lh_img_view"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_width="134dp"
        android:layout_height="80dp"
        android:background="@color/transparent"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/lh_img_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lh_name_text"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_18"/>

        <TextView
            android:id="@+id/lh_count_view"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_color"/>
    </LinearLayout>




</RelativeLayout>