<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_16"
        android:text="简介"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/star_content_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/txt_14"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        />
    <RelativeLayout
        android:id="@+id/star_more_btn"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/v_n_more_text_view"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/main_dark_theme_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"/>
            <ImageView
                android:layout_marginStart="4dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/v_n_more_text_view"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@mipmap/ic_av_more"/>
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:background="#f5f5f5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </View>

</LinearLayout>