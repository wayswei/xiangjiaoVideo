<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/qrcodebk">

    <LinearLayout
        android:id="@+id/er_top_view"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/er_corners_2"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_20"
            android:textColor="@color/white"
            android:text="您的邀请码:"/>

        <TextView
            android:id="@+id/er_code"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_18"
            android:textColor="@color/main_theme_color"
            tools:text="TYKRVT"/>
        <RelativeLayout
            android:id="@+id/copy_ma_btn"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/er_copy_corners"
            android:layout_width="70dp"
            android:layout_height="30dp">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/white"
                android:text="复制"/>

        </RelativeLayout>
        <TextView
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_14"
            android:textColor="@color/white"
            android:text="邀请好友填写邀请码"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/er_back_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/er_top_view"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="30dp"
        android:background="@color/black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_er"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="扫描上面二维码，下载APP"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/save_er_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="26dp"
                android:layout_weight="1"
                android:background="@drawable/er_copy_corners">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="保存二维码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/copy_er_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="35dp"
                android:layout_weight="1"
                android:background="@drawable/er_copy_corners">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="复制链接"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
